/*
 * To support the mixed data model which means the client and the server
 * may use different data model. See the comment for limitation of data type
 * used in the sysif interfaces in <libsysif/base/api.h>.
 */
DEFINE_MANAGER(clock, 8,
	DEFINE_METHOD(clock, settime,
		      ARG(2,
			  unsigned long, tp,
			  unsigned long long, file_id),
		      RET_NO,
		      SLOWDATA_NO)
	DEFINE_METHOD(clock, gettime,
		      ARG(2,
			  unsigned long, tp,
			  unsigned long long, file_id),
		      RET_NO,
		      SLOWDATA_NO)
	DEFINE_METHOD(clock, getres,
		      ARG(2,
			  unsigned long, tp,
			  unsigned long long, file_id),
		      RET_NO,
		      SLOWDATA_NO)
	DEFINE_METHOD(clock, adjtime,
		      ARG(2,
			  unsigned long, tx,
			  unsigned long long, file_id),
		      RET_NO,
		      SLOWDATA_NO)
)
